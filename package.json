{
    "name": "bravenewtest",
    "version": "1.0.0",
    "description": "Test project for Brave New Coin",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "start": "concurrently \"node server\" \"webpack --watch\"",
        "dev": "concurrently 'yarn client' 'yarn server'",
        "client": "webpack --watch",
        "server": "nodemon server --ignore server/public",
        "knex": "knex --knexfile ./knexfile.js",
        "updateDb": "rm -f dev.sqlite3 && yarn knex migrate:latest && yarn knex seed:run"
    },
    "babel": {
        "presets": [
            "@babel/preset-env",
            "@babel/preset-react"
        ],
        "plugins": [
            "@babel/plugin-proposal-class-properties",
            "@babel/plugin-proposal-object-rest-spread"
        ]
    },
    "dependencies": {
        "bootstrap": "^4.3.1",
        "concurrently": "^4.1.0",
        "dotenv": "^8.0.0",
        "express": "^4.17.1",
        "knex": "^0.17.6",
        "path": "^0.12.7",
        "prop-types": "^15.7.2",
        "react": "^16.8.6",
        "react-bootstrap": "^1.0.0-beta.9",
        "react-dom": "^16.8.6",
        "sqlite3": "^4.0.9",
        "superagent": "^5.0.8"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/plugin-proposal-class-properties": "^7.4.4",
        "@babel/preset-env": "^7.4.5",
        "@babel/preset-react": "^7.0.0",
        "babel-loader": "^8.0.6",
        "node-sass": "^4.12.0",
        "nodemon": "^1.19.1",
        "sass": "^1.21.0",
        "sass-loader": "^7.1.0",
        "webpack": "^4.34.0",
        "webpack-cli": "^3.3.4"
    }
}
